{
  "$schema": "https://json.schemastore.org/swcrc",
  "sourceMaps": true,
  "jsc": {
    "parser": {
      "syntax": "typescript",
      "decorators": true,
      "dynamicImport": true
    },
    "transform": {
      "legacyDecorator": true,
      "decoratorMetadata": true
    },
    "baseUrl": "./",
    "paths": {
      "@/src/*": ["src/*"],
      "@/tests/*": ["tests/*"]
    },
    "target": "es2016"
  },
  "module": {
    "type": "es6",
    "strict": true,
    "resolveFully": true
  },
  "minify": false
}
